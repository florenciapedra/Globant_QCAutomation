Algoritmo ejercicio_3
	Definir metros, centimetros, milimetros, pulgadas Como Real;
	
	Escribir "Ingrese un valor en metros";
	Leer metros;
	
	centimetros = metros * 100;
	Escribir "El valor expresado en centimetros es ", centimetros;
	
	milimetros = metros * 1000;
	Escribir "El valor expresado en milimetros es ", milimetros;
	
	pulgadas = centimetros / 2.54;
	Escribir "El valor expresado en pulgadas es ", pulgadas;

FinAlgoritmo
